<div class="booyah-box">
  <div class="col-xs-2 avatar">
    <%= image_tag "user-brown.png" %>
  </div>

  <div class="col-xs-10">
    <h1>My User Profile</h1>
    <h3 class="username">Username: <%= @user.email %></h3>
    <h3>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
    <ul>
    <li><h3><%= @user.comments.count %> total comment(s)</h3></li>
    <li><h3><%= @user.comments.where(rating: '5_stars').count %> &starf;&starf;&starf;&starf;&starf; rating(s)</h3></li>
    </ul>
    <br />
  </div>
  <div class="clear"></div>
</div>

<h1 class="text-center mycomments">My Comments</h1>
<% @user.comments.each do |comment| %>
  <div class="col-xs-12 col-sm-6">
  <h2 class="text-center placename"><%= link_to comment.place.name, place_path(comment.place) %></h2>
    <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> . . .
      <% end %> 
      <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>